<% layout('layout')%>
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<link href="/css/wall.css" rel="stylesheet">

<div class="container">
    <div class="row">

        <div class="message-wrap col-lg-12">
            <% for(let i=0;i<status.status.length;i++) { %>
            <% if(status.status[i].type==="public" || friends.includes(status.status[i].user_id) || user.id===status.status[i].user_id) { %>
            <div class="msg-wrap">

                <div class="media msg">
                    <div class="media-body">
                        <small class="pull-right time"><i class="fa fa-clock-o"></i> <%= status.status[i].date%></small>
                        <% if(status.status[i].lastname == 'undefined') { %>
                        <h5 class="media-heading"><%= status.status[i].firstname %></h5>
                        <% } else { %>
                        <h5 class="media-heading"><%= status.status[i].firstname %>&nbsp;<%= status.status[i].lastname %></h5>
                        <% } %>
                        <small class="col-lg-10"><%= status.status[i].text %></small>
                    </div>
                </div>

            </div>

            <% } %>

            <% } %>

            <form method="post">
                <div class="send-wrap ">
                    <div class="radio-inline">
                        <label><input type="radio" name="type" value="public" checked>Public</label>
                    </div>
                    <div class="radio-inline">
                        <label><input type="radio" name="type" value="private">Private</label>
                    </div>
                    <textarea class="form-control send-message" rows="3" placeholder="Write a status..." name="text"></textarea>
                </div>
                <div class="btn-panel">
                    <button class="col-lg-4 text-right btn send-message-btn pull-right" type="submit"><i class="fa fa-plus"></i> Post</button>
                </div>
            </form>
        </div>
    </div>
</div>
